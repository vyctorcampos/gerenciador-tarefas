package com.desafio.tarefa.dto.request;

public class TarefaFiltroRequestDTO {
    private String tituloDescricao;
    private String responsavel;
    private String situacao;

    // Construtores
    public TarefaFiltroRequestDTO() {}

    public TarefaFiltroRequestDTO(String tituloDescricao, String responsavel, String situacao) {
        this.tituloDescricao = tituloDescricao;
        this.responsavel = responsavel;
        this.situacao = situacao;
    }

    // Getters e Setters
    public String getTituloDescricao() {
        return tituloDescricao;
    }

    public void setTituloDescricao(String tituloDescricao) {
        this.tituloDescricao = tituloDescricao;
    }

    public String getResponsavel() {
        return responsavel;
    }

    public void setResponsavel(String responsavel) {
        this.responsavel = responsavel;
    }

    public String getSituacao() {
        return situacao;
    }

    public void setSituacao(String situacao) {
        this.situacao = situacao;
    }
}
