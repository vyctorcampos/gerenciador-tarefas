# Variáveis de ambiente para Docker Compose
# Copie este arquivo para .env e ajuste conforme necessário

# Configurações do Banco de Dados
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=quadro_tarefa
POSTGRES_USER=postgres
POSTGRES_PASSWORD=senha
POSTGRES_SCHEMA=tarefa

# Configurações do Backend
JWT_SECRET=mt-secret-key-docker-production
SPRING_PROFILES_ACTIVE=docker

# Configurações de JVM
JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC -XX:+UseContainerSupport

# Configurações de rede
BACKEND_PORT=8080
PGADMIN_PORT=5050

# Configurações de volume
POSTGRES_DATA_DIR=./postgres-data
